<!--index.wxml-->
<view class="index">
  <view class="index-header">
    <view>
      当前会话id: {{ list[0].sessionId}}
    </view>
    <view class="index-header-btn" bind:tap="reset">开启新对话</view>
  </view>
  <scroll-view class="index-scroll">
    <view wx:for="{{list}}" wx:key="*this" class="item">
      <text class='item-role'>
      </text>
      <view class='item-content'>
        {{item.content}}
        <view class="item-play">
          播放按钮
        </view>
      </view>
    </view>
  </scroll-view>

  <view class="index-footer">
    <button bind:touchstart="handleStart" bind:touchend="handleStop">
      {{isIng ?'录音中...':'开始录音'}}
    </button>
  </view>
</view>